{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["plugin:react/recommended", "plugin:react-hooks/recommended", "xo", "prettier"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx"]
    }
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react", "@typescript-eslint"],
  "rules": {
    "react-hooks/exhaustive-deps": "error"
  },
  "globals": {
    "React": true
  }
}
